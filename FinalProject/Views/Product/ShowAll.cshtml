@model IEnumerable<FinalProject.Models.ForDisplayingOnly>

@{
    ViewData["Title"] = "ShowAll";
}
<div style="color: #FFFFFF; border: 1px solid #031633; margin-top:5px;padding:40px; background-color: #290D1D;">
<h4 style="text-align:center">Customers and Products</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" style="color:white;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QTY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QTY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<footer class="footer" style="background-color: #031633;color:white; display:flex;justify-content:space-evenly; padding:50px; width:1296px; margin-top:5px; ">
        <div class="container">
            &copy; 2022 - FinalProject
        </div>
        <div class="container">
            <h5>Quick Links</h5>
            <ul style="list-style:none;" class="nav flex-column">
            <li style="margin-left:20px;">
                  <a  style="text-decoration:none;color:#FFFFFF" asp-area="" asp-controller="Product" asp-action="ShowAll">Customers with Products</a>
            </li>
            <li style="margin-left:20px;">
                <a style="text-decoration:none;color:#FFFFFF" asp-area="" asp-controller="Product" asp-action="Customers">Customers</a>
            </li>
            <li style="margin-left:20px;">
                <a style="text-decoration:none;color:#FFFFFF" asp-area="" asp-controller="Product" asp-action="InsertCustomer">New Receipt</a>
            </li>
            </ul>
        </div>
    </footer>
